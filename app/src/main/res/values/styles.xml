<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@android:color/holo_red_dark</item>
		<item name="colorPrimaryDark">@android:color/holo_red_dark</item>
		<item name="colorAccent">@android:color/black</item>
	</style>

	<!--textview de color verdes-->
	<style name="etiquetas_verdes">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">@dimen/veinte</item>
		<item name="android:textColor">@color/verde_principal</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<!--Estilo de caja con borde verde-->
	<style name="caja_verde">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/borde_verde</item>
		<item name="android:inputType">textCapCharacters|textNoSuggestions</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:textColorHint">@android:color/darker_gray</item>
		<item name="android:textSize">@dimen/veinte</item>
	</style>

	<!-- Estilo de boton -->
	<style name="boton_rojo">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:background">@android:color/holo_red_dark</item>
		<item name="android:textSize">22sp</item>
	</style>
</resources>