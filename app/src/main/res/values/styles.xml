<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@android:color/black</item>
	</style>

	<!--textview de color verdes-->
	<style name="etiquetas_verdes">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">@dimen/veinte</item>
		<item name="android:textColor">@color/verde_principal</item>
		<item name="android:textSize">22sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<!-- Declaracion de estilo -->
	<style name="boton_verde">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:background">@android:color/holo_red_dark</item>
		<item name="android:textSize">22sp</item>
	</style>
</resources>